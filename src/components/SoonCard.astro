---
export interface Props {
  title: string;
  description: string;
  icon: string;
  comingSoon?: string;
  estimatedDate?: string;
}

const { title, description, icon, comingSoon = "Coming Soon", estimatedDate } = Astro.props;
---

<div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20 hover:border-white/30 transition-all duration-300 relative overflow-hidden">
  <!-- Coming Soon Badge -->
  <div class="absolute top-4 right-4 bg-gradient-to-r from-yellow-400 to-orange-500 text-white text-xs font-bold px-3 py-1 rounded-full animate-pulse">
    {comingSoon}
  </div>
  
  <!-- Overlay for disabled state -->
  <div class="absolute inset-0 bg-black/20 rounded-xl pointer-events-none"></div>
  
  <div class="relative z-10">
    <div class="text-4xl mb-4 text-center opacity-75">{icon}</div>
    
    <h3 class="text-xl font-bold text-white mb-3 opacity-90">{title}</h3>
    
    <p class="text-gray-300 text-sm mb-4 line-clamp-3 opacity-80">{description}</p>
    
    <div class="flex items-center justify-between mb-4">
      {estimatedDate && (
        <span class="text-gray-400 text-xs flex items-center">
          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
          </svg>
          ETA: {estimatedDate}
        </span>
      )}
    </div>
    
    <button 
      disabled
      class="block w-full bg-gray-600 text-gray-300 font-bold py-3 px-6 rounded-lg text-center cursor-not-allowed opacity-60"
    >
      Stay Tuned
    </button>
  </div>
  
  <!-- Subtle pattern overlay -->
  <div class="absolute inset-0 opacity-5">
    <div class="w-full h-full bg-gradient-to-br from-white/20 to-transparent"></div>
  </div>
</div>
