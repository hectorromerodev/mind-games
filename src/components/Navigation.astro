---
import { createRoute } from '../utils/paths';
---

<nav class="nav">
  <div class="nav__container">
    <!-- Logo -->
    <div class="nav__brand">
      <a href={createRoute('HOME')} class="nav__brand">
        <span class="text-brand">
          Mind
        </span>
        <span class="text-white">Games</span>
      </a>
    </div>
    
    <!-- Navigation Links -->
    <div class="hidden md:block">
      <div class="nav__links">
        <a href={createRoute('HOME')} class="nav__link">
          Home
        </a>
        <a href={createRoute('GAMES')} class="nav__link">
          Games
        </a>
        <div class="relative group">
          <span class="text-gray-400 cursor-not-allowed px-3 py-2 rounded-md text-sm font-medium flex items-center">
            Leaderboard
            <span class="ml-2 text-xs bg-yellow-500 text-yellow-900 px-2 py-1 rounded-full font-bold">
              Soon
            </span>
          </span>
          <div class="glass-modal absolute top-full left-0 mt-2 w-48 text-white text-xs p-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none z-10">
            Coming soon! Login required to view leaderboards.
          </div>
        </div>
        <a href={createRoute('ABOUT')} class="nav__link">
          About
        </a>
      </div>
    </div>
    
    <!-- User Actions -->
    <div class="hidden md:block">
      <div class="ml-4 flex items-center md:ml-6">
        <div class="relative group">
          <button class="bg-gray-600 cursor-not-allowed text-gray-300 font-bold py-2 px-4 rounded-full text-sm opacity-60 flex items-center">
            Sign In
            <span class="ml-2 text-xs bg-yellow-500 text-yellow-900 px-2 py-1 rounded-full font-bold">
                Soon
              </span>
            </button>
            <div class="glass-modal absolute top-full right-0 mt-2 w-48 text-white text-xs p-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none z-10">
              ðŸ”’ User authentication coming soon! Track progress and compete with others.
            </div>
          </div>
        </div>
      </div>
      
      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button type="button" class="text-gray-400 hover:text-white focus:outline-none focus:text-white">
          <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>
</nav>
