---
export interface Props {
  title: string;
  description: string;
  icon: string;
  difficulty: 'Easy' | 'Medium' | 'Hard';
  skills?: string[];
  href?: string;
}

const { title, description, icon, difficulty, skills = [], href = "#" } = Astro.props;

const difficultyColors = {
  Easy: 'game-card__difficulty--easy',
  Medium: 'game-card__difficulty--medium',
  Hard: 'game-card__difficulty--hard'
};
---

<div class="game-card">
  <div class="game-card__header">
    <div class="text-4xl mb-4 text-center">{icon}</div>
    <h3 class="game-card__title">{title}</h3>
  </div>
  
  <div class="game-card__body">
    <p class="game-card__description">{description}</p>
    
    <div class="game-card__badges">
      <span class={`game-card__difficulty ${difficultyColors[difficulty]}`}>
        {difficulty}
      </span>
    </div>

    {skills && skills.length > 0 && (
      <div class="game-card__skills">
        {skills.map((skill) => (
          <span class="game-card__skill-tag">
            {skill}
          </span>
        ))}
      </div>
    )}
  </div>
  
  <div class="game-card__footer">
    <div class="game-card__actions">
      <a 
        href={href}
        class="game-card__button game-card__button--primary"
      >
        Play Now
      </a>
    </div>
  </div>
</div>
