---
export interface Props {
  title: string;
  description: string;
  icon: string;
  difficulty: 'Easy' | 'Medium' | 'Hard';
  skills?: string[];
  href?: string;
}

const { title, description, icon, difficulty, skills = [], href = "#" } = Astro.props;

const difficultyColors = {
  Easy: 'bg-green-500',
  Medium: 'bg-yellow-500',
  Hard: 'bg-red-500'
};
---

<div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20 hover:border-white/40 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl">
  <div class="text-4xl mb-4 text-center">{icon}</div>
  
  <h3 class="text-xl font-bold text-white mb-3">{title}</h3>
  
  <p class="text-gray-300 text-sm mb-4 line-clamp-3">{description}</p>
   <div class="flex items-center justify-between mb-4">
    <span class={`px-3 py-1 rounded-full text-xs font-semibold text-white ${difficultyColors[difficulty]}`}>
      {difficulty}
    </span>
  </div>

  {skills && skills.length > 0 && (
    <div class="mb-4">
      <div class="flex flex-wrap gap-2">
        {skills.map((skill) => (
          <span class="px-2 py-1 bg-white/10 text-white text-xs rounded-md border border-white/20">
            {skill}
          </span>
        ))}
      </div>
    </div>
  )}
  
  <a 
    href={href}
    class="block w-full bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600 text-white font-bold py-3 px-6 rounded-lg text-center transition-all duration-300"
  >
    Play Now
  </a>
</div>
