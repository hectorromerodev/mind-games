---
import Layout from './Layout.astro';
import { createRoute } from '../utils/paths';

export interface Props {
  title: string;
  gameTitle: string;
  gameIcon?: string;
  description?: string;
}

const { title, gameTitle, gameIcon = "ðŸŽ®", description } = Astro.props;
---

<Layout title={title}>
  <div class="min-h-screen bg-gradient-to-br from-purple-900 via-blue-900 to-indigo-900 py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Mobile Back Button (Top) -->
      <div class="block md:hidden mb-4">
        <a 
          href={createRoute('GAMES')} 
          class="inline-flex items-center gap-2 bg-slate-900/10 backdrop-blur-sm hover:bg-slate-900/20 text-white font-medium py-2 px-4 rounded-lg transition-all duration-300 border border-slate-300/20 hover:border-slate-300/40"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Games
        </a>
      </div>

      <!-- Desktop Game Header with Back Button -->
      <div class="hidden md:flex items-center justify-between mb-8">
        <!-- Back Button -->
        <a 
          href={createRoute('GAMES')} 
          class="inline-flex items-center gap-2 bg-slate-900/10 backdrop-blur-sm hover:bg-slate-900/20 text-white font-medium py-2 px-4 rounded-lg transition-all duration-300 border border-slate-300/20 hover:border-slate-300/40"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Games
        </a>

        <!-- Game Title -->
        <div class="text-center flex-1">
          <h1 class="text-4xl md:text-5xl font-bold text-white">
            {gameIcon} {gameTitle}
          </h1>
        </div>

        <!-- Spacer for balance -->
        <div class="w-32"></div>
      </div>

      <!-- Mobile Game Title (Centered) -->
      <div class="block md:hidden text-center mb-8">
        <h1 class="text-3xl font-bold text-white">
          {gameIcon} {gameTitle}
        </h1>
      </div>

      <!-- Game Description -->
      {description && (
        <div class="text-center mb-8">
          <p class="text-lg text-gray-300">
            {description}
          </p>
        </div>
      )}

      <!-- Game Content Slot -->
      <slot />
    </div>
  </div>
</Layout>
