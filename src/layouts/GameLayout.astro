---
import Layout from './Layout.astro';
import { createRoute } from '../utils/paths';

export interface Props {
  title: string;
  gameTitle: string;
  gameIcon?: string;
  description?: string;
}

const { title, gameTitle, gameIcon = "ðŸŽ®", description } = Astro.props;
---

<Layout title={title}>
  <div class="game-layout">
    <div class="container-game">
      <!-- Mobile Back Button (Top) -->
      <div class="block md:hidden mb-4">
        <a 
          href={createRoute('GAMES')} 
          class="btn-back"
        >
          <svg class="btn-back__icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Games
        </a>
      </div>

      <!-- Desktop Game Header with Back Button -->
      <div class="hidden md:flex items-center justify-between mb-8">
        <!-- Back Button -->
        <a 
          href={createRoute('GAMES')} 
          class="btn-back"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Games
        </a>

        <!-- Game Title -->
        <div class="text-center flex-1">
          <h1 class="heading-primary">
            {gameIcon} {gameTitle}
          </h1>
        </div>

        <!-- Spacer for balance -->
        <div class="w-32"></div>
      </div>

      <!-- Mobile Game Title (Centered) -->
      <div class="block md:hidden text-center mb-8">
        <h1 class="heading-primary-mobile">
          {gameIcon} {gameTitle}
        </h1>
      </div>

      <!-- Game Description -->
      {description && (
        <div class="text-center mb-8">
          <p class="text-description-lg">
            {description}
          </p>
        </div>
      )}

      <!-- Game Content Slot -->
      <slot />
    </div>
  </div>
</Layout>
