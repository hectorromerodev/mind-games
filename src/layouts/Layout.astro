---
import "../styles/global.css";
import Navigation from "../components/Navigation.astro";
import { createAssetPath } from '../utils/paths';

export interface Props {
  title?: string;
}

const { title = "Mind Games - Challenge Your Mind" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href={createAssetPath('/favicon.svg')} />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Challenge your mind with brain-twisting puzzles and games designed to push your cognitive limits." />
		<title>{title}</title>
	</head>
	<body class="bg-gray-900 text-white">
		<Navigation />
		<main>
			<slot />
		</main>
	</body>
</html>
